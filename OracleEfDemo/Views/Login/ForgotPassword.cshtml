@model ForgotPasswordDto
@{
    Layout = "_LoginLayout";
}

<div class="w-lg-500px bg-body rounded shadow-sm p-10 p-lg-15 mx-auto">
    <form class="form w-100" method="post" autocomplete="off" asp-controller="Login" asp-action="ForgotPassword">
        <div class="text-center mb-10">
            <h1 class="text-dark mb-3">Şifremi Unuttum?</h1>
            <div class="text-gray-400 fw-bold fs-4">Şifrenizi Sıfırlamak İçin E-Posta Adresinizi Giriniz.</div>
        </div>
        <div class="fv-row mb-10">
            <label asp-for="Email" class="form-label fw-bolder text-gray-900 fs-6">E-Posta</label>
            <input class="form-control form-control-solid" type="email" asp-for="Email" autocomplete="off" />
            <span asp-validation-for="Email" class="text-danger fw-bold"></span>
        </div>
        <div class="d-flex flex-wrap justify-content-center pb-lg-0">
            <button type="submit" class="btn btn-lg btn-primary fw-bolder me-4">
                E-Posta Gönder
            </button>
            <a href="~/Login/Login/" class="btn btn-lg btn-light-primary fw-bolder">Geri</a>
        </div>
    </form>
</div>