@model List<UserDto>
@{
    ViewData["Title"] = "Kullanıcı Listesi";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header justify-content-end align-items-center">
                <div class="mx-1">
                    <button type="button" class="btn btn-info mx-1" data-bs-toggle="modal" data-bs-target="#salaryUpdateModal"><i class="bi bi-cash fs-3"></i> Maaş Zammı</button>
                    <a href="AddorUpdateUser" class="btn btn-success mx-1"><i class="bi bi-plus fs-3"></i>Yeni Kullanıcı Ekle</a>
                </div>
            </div>
            <div class="card-body p-0 tab-pane fade show active" role="tabpanel">
                <div class="table-responsive">
                    <table class="table table-row-bordered table-striped align-middle gy-4 gs-9" id="UserTable">
                        <thead class="border-bottom border-gray-200 fs-6 text-gray-600 fw-bolder bg-light bg-opacity-75">
                            <tr>
                                <td class="min-w-250px">Ad Soyad</td>
                                <td class="min-w-150px">Telefon</td>
                                <td class="min-w-150px">E-Posta</td>
                                <td class="min-w-150px">Departman</td>
                                <td class="min-w-150px">Maaş</td>
                                <td class="min-w-150px">Kayıt Tarihi</td>
                                <td class="min-w-150px">Değiştir/Sil</td>
                            </tr>
                        </thead>
                        <tbody class="fw-bold text-gray-600">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FullName</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.Email</td>
                                    <td>@item.Department</td>
                                    <td>@item.Salary</td>
                                    <td>@item.CreatedDate?.ToShortDateString()</td>
                                    <td>
                                        <a href="AddorUpdateUser?id=@item.Id" class="btn btn-icon btn-success"><i class="bi bi-pencil"></i></a>
                                        <button class="btn btn-icon btn-danger deleteButton" data-id="@item.Id"><i class="bi bi-trash"></i></button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" id="salaryUpdateModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form asp-controller="User" asp-action="UpdateEmployeesSalary" method="post" autocomplete="off">
                <div class="modal-header">
                    <h5 class="modal-title">Maaş Zammı Güncellemesi</h5>

                    <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                        <span class="svg-icon svg-icon-2x"></span>
                    </div>
                </div>

                <div class="modal-body">
                    <label for="salaryRate" class="fs-6 fw-bold form-label mt-3">Zam Oranı (%)</label>
                    <input type="number" class="form-control form-control-solid" step="0.01" name="salaryRate" id="salaryRate" maxlength="4" required />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" class="btn btn-success">Tüm Maaşları Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#UserTable').on('click', '.deleteButton', function (e) {
            e.preventDefault();

            const id = e.currentTarget.getAttribute("data-id");

            Swal.fire({
                  title: "Bu kaydı silmek istediğine emin misin?",
                  text: "Bu işlem geri alınamaz!",
                  icon: "warning",
                  showCancelButton: true,
                  confirmButtonColor: "#3085d6",
                  cancelButtonColor: "#d33",
                  confirmButtonText: "Evet, Eminim",
                  cancelButtonText: "Geri"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `RemoveUser?id=${id}`;
                }
            });
        });

        $('#salaryUpdateModal').on('show.bs.modal', function (e) {
            const button = $(e.relatedTarget);
            const prodId = button.data('id');

            $(this).find('#productId').val(prodId);
        });

        $('#salaryUpdateModal').on('hidden.bs.modal', function () {
            $(this).find('#productId').val('');
            $(this).find('#newStockQuantity').val('');
        });
    </script>
}